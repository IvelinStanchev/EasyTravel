<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ProgressBar
        android:id="@+id/pb_subscribe"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_subscribe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_colors"
        android:textSize="@dimen/tablet_subscribe_name_textSize"
        android:gravity="center_horizontal"
        android:text="" />

    <TextView
        android:id="@+id/tv_subscribe_upcomingTrips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_colors"
        android:textSize="@dimen/tablet_subscribe_textSize"
        android:gravity="center_horizontal"
        android:text="" />

    <TextView
        android:id="@+id/tv_subscribe_totalTrips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_colors"
        android:textSize="@dimen/tablet_subscribe_textSize"
        android:gravity="center_horizontal"
        android:text="" />

    <Button
        android:id="@+id/btn_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tablet_subscribe_textSize"
        android:textColor="@color/text_colors"
        android:text="Subscribe" />
    
</LinearLayout>
